package com.neusoft.controller.business;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;

import com.alibaba.fastjson.JSON;
import com.neusoft.controller.util.SuperAction;
import com.neusoft.service.IAllPersonDetailCountService;
import com.neusoft.util.ResultModel;
@Controller
public class AllPersonDetailCountAction implements SuperAction{

	@Autowired
	private IAllPersonDetailCountService allPersonDetailCountService;
	@Override
	public String actionAjaxHandler(HttpServletRequest request,
			HttpServletResponse response) {
		ResultModel resultModel = allPersonDetailCountService.getAllPersonDetCount();
		String allPersonDetailCount_json = JSON.toJSONString(resultModel);
		return allPersonDetailCount_json;
	}

	@Override
	public void actionForwardHandler(HttpServletRequest request,
			HttpServletResponse response) {
		// TODO Auto-generated method stub
		
	}

}
