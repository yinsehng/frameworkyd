<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="DemoMapper">
	
	<resultMap id="Demo" type="com.neusoft.model.Demo" >
		<result column="id" property="id" />
	    <result column="name" property="name" />
	    <result column="title" property="title" />
	</resultMap>

	<sql id="Base_Column_List">
		t.id,
		t.name,
		t.title
	</sql>

	<select id="findAll" parameterType="java.lang.Integer" resultMap="Demo">
		SELECT <include refid="Base_Column_List" />
		FROM demo t
	</select>

	<insert id="save" parameterType="com.neusoft.model.Demo" >
		INSERT INTO demo (id,name,title)
		values ( #{id}, #{name}, #{title});
	</insert>

	<update id="update" parameterType="com.neusoft.model.Demo" >
		UPDATE demo
		SET name = #{name},
			title = #{title} 
		WHERE id = #{id}
	</update>

	<delete id="remove" parameterType="java.lang.Integer" >
		DELETE FROM demo
		WHERE id = #{id}
	</delete>

	<select id="load" parameterType="java.lang.Integer" resultMap="Demo">
		SELECT <include refid="Base_Column_List" />
		FROM demo AS t
		WHERE t.id = #{id}
	</select>

</mapper>